# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRY=7d

# Database
DB_TYPE=sqlite
DB_PATH=./data/database.sqlite

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=false

# Performance Monitoring
SLOW_REQUEST_THRESHOLD=1000
SLOW_QUERY_THRESHOLD=100
ENABLE_AUTOMATED_PERFORMANCE_REPORTS=true
PERFORMANCE_REPORT_INTERVAL=86400000
PERFORMANCE_REPORT_RETENTION=30
PERFORMANCE_ALERT_ERROR_RATE=0.05
PERFORMANCE_ALERT_SLOW_REQUEST_RATE=0.10
PERFORMANCE_ALERT_MEMORY_PERCENT=85
PERFORMANCE_ALERT_CPU_PERCENT=80

# CORS
CORS_ORIGIN=http://localhost:3000